                    "type": "string"
                }
            }
        },
        "handlers.createTxDTO": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "category_id": {
                    "type": "string"
                },
                "date": {
                    "description": "ISO; defaults now",
                    "type": "string"
                },
                "memo": {
                    "type": "string"
                },
                "payee": {
                    "type": "string"
                },
                "tags": {
                    "type": "string"
                },
                "type": {
                    "description": "\"income\" | \"expense\"",
                    "type": "string"
                }
            }
        },
        "handlers.upsertBudgetDTO": {
            "type": "object",
            "properties": {
                "amount": {
                    "description": "required",
                    "type": "number"
                },
                "category_id": {
                    "description": "required",
                    "type": "string"
                },
                "month": {
                    "description": "\"YYYY-MM\"",
                    "type": "string"
                }
            }
        },
        "models.Budget": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "category_id": {
                    "type": "string"
                },
                "created_at": {
